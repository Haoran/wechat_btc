/**index.wxss**/

.form {
  width: 100%;
}

.search {
  background-color: #efeff4;
  position: relative;
  display: flex;
  justify-content: flex-start;
  padding: 30rpx;
  overflow-y: hidden;
  border: solid 0px red;
  border-bottom:solid 1px #f3f4f7;

}

.icon-search {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 16rpx;
  color:#b2b2b2;
}

.icon-clear{
  position: absolute;
  margin-left: 70%;
  width: 40rpx;
  height: 40rpx;
  margin-top: 16rpx;
  color:#b2b2b2;
  z-index: 1000;
}

.search-input {
  height: 60rpx;
  border-radius: 8rpx;
  padding: 0 50rpx 0 70rpx;
  font-size: 14px;
  color: #000;
  background-color: #fff;
}

.search_submit {
  width: 18.3%;
  height: 60rpx;
  color: #b2b2b2 !important;
  padding: 0;
  font-size: 16px;
  line-height: 60rpx;
  margin-left: 1.7%;
  letter-spacing: 2rpx;
  text-align: center;
  border: 0 !important;
}

.operation {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 240rpx;
  background-color: #2967d1;
  font-size: 16px;
}

.view-text {
  margin-top: 20rpx;
  color: #fff;
}

.scan {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 49%;
  height: 100%;
}

.paster {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 49%;
  height: 100%;
}

.line {
  width: 2rpx;
  border-left: solid 2rpx #fff;
  height: 80%;
  opacity: 0.2;
}

.icon-scan, .icon-copy {
  width: 60rpx;
  height: 60rpx;
}

.search-history {
  width: 100%;
  height: 800rpx;
  background-color: #fff;
}

.history {
  display: block;
}

.history-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  color: #8a8a8a;
  text-align: left;
  padding-left: 30rpx;
  border: solid 0px red;
}

.trash {
  width: 80rpx;
  height: 80rpx;
  float: right;
}

.trash-img {
  width: 30rpx;
  height: 30rpx;
  margin-top: 24rpx;
  margin-left: 20rpx;
}

.no-search-list {
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.no-result {
  font-size: 16px;
  color: #9a9a9a;
  line-height: 60rpx;
  letter-spacing: 1px;
}

.reason {
  margin-top: 16rpx;
  font-size: 12px;
  line-height: 25rpx;
  color: #9a9a9a;
  padding: 0 30rpx;
  text-align: center;
}

.addressList {
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  padding-left: 10rpx;
  border-bottom: solid 1px #f5f5f5;
  margin: 0 20rpx;
}

.noAddressHistory {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
  text-align: center;
  color: #9a9a9a;
  border-bottom: solid 1px #f5f5f5;
  margin: 0 20rpx;
}
