.cal-panel {
  background-color: #2967d1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding: 30rpx;
}

.cal-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.cal-title text {
  width: 40%;
  display: block;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

.cal-title view {
  width: 20%;
  display: block;
  height: 50rpx;
}

.cal-content {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
}

.cal-input {
  width: 40%;
  position: relative;
}

.cal-input input[type='digit'] {
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 80rpx 0 20rpx;
  line-height: 80rpx;
  color: #9a9a9a;
}

.cal-input text {
  position: absolute;
  top: 0;
  right: 20rpx;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 999;
  color: #3a3a3a;
}

.icon-blank {
  width: 20%;
  height: 80rpx;
  text-align: center;
}

.icon-change {
  width: 56rpx;
  height: 80rpx;
}

.cal-rate {
  display: block;
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 12px;
  text-align: right;
  padding-right: 40rpx;
}

.cal-express {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 12px;
  margin-top: 18rpx;
  margin-bottom: 5rpx;
}

.cal-note {
  padding-right: 10rpx;
}

.cal-config {
  background-color: #f8f8f8;
   padding-bottom: 100rpx;
}

.cal-config label {
  display: block;
  line-height: 84rpx;
  height: 84rpx;
  padding-left: 20rpx;
  color: #888;
}

.cal-section {
  position: relative;
}

.cal-config picker {
  display: block;
  line-height: 84rpx;
  height: 84rpx;
  padding-left: 20rpx;
  color: #000;
  background: #fff;
  box-shadow: inset 0 1px 0 0 #E5E5E5, inset 0 -1px 0 0 #E5E5E5;
}

.cal-config input[type='digit'] ,.cal-config input[type='number']{
  display: block;
  padding-left: 20rpx;
  height: 84rpx;
  color: #000;
  background: #fff;
  padding-right: 200rpx;
  border-top: solid 1px #e5e5e5;
  border-bottom: solid 1px #e5e5e5;
}

.cal-muitle {
  display: block;
  position: absolute;
  top: 86rpx;
  right: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  width: 100rpx;
  z-index: 999;
  text-align: right;
  white-space: nowrap;
}

.cal-drop {
  width: 30rpx;
  height: 20rpx;
  margin-top: 30rpx;
}

.cal-loading{
   width: 56rpx;
   height: 56rpx;
   margin-top: 15rpx;
   right: 20rpx;
}

.cal-loading-price{
   width: 56rpx;
   height: 56rpx;
   margin-top: 15rpx;
   right: 115rpx;
}

.cal-pool-fee{
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:0 20rpx;
}
.cal-pool-fee text{
  display: block;
  background-color: #e6e9ee;
  padding:0 12rpx;
  height:46rpx;
  line-height: 48rpx;
  font-size: 10px;
  color:#000000;
  margin-left: 20rpx;
  border-radius:6rpx;
}
.cal-pool-fee text:first-child{
  margin-left: 0;
}